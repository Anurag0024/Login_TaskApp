<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Snoopy"
        android:textSize="70dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/Main_SignIn_btn"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
       android:gravity="center"
        android:background="@drawable/round_btn_style"
        android:textSize="15dp"
        android:text="Sign in"/>

    <Button
        android:id="@+id/btn_account_create"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_btn_style"
        android:text="Create Account"
        android:textSize="15dp" />

   <TextView
       android:layout_width="150dp"
       android:layout_height="30dp"
       android:layout_gravity="center"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:textStyle="bold"
       android:textColor="#000000"
       android:text="or sign up with"/>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fb"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/searchlogo"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/linkedin"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/twitter"
            android:layout_weight="4"/>
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="9dp"
        android:textColor="#000000"
        android:text="Lorem ipsum dolor sit amet,consecture adipiscing elit sed do eiumed tempor inciduent ut labore magna aliqua .Bibendum est ultirics "/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="9dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text=" Terms and conditions "/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" privacy policies "
            android:textColor="#000000"
            android:textSize="9dp" />




    </LinearLayout>


</LinearLayout>